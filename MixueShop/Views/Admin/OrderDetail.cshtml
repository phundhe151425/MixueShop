@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
@using MixueShop.Models
@model List<OrderDetail>
@*==================================================*@
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href=~/css/styleadmin.css />

    <title>Mixue</title>
    <style>
        ion-icon {
            padding-right: 5px;
            margin: auto;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <div class="header">
        <div class="inheader">
            <div class="menu">
                <ul>
                    <li>
                        <a href="/Home/ViewProduct">
                            <ion-icon name="storefront"></ion-icon>
                            Shop
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <ion-icon name="stats-chart"></ion-icon>
                            Statisctic
                        </a>
                    </li>
                    <li class="active">
                        <a href="#">
                            <ion-icon name="settings"></ion-icon>
                            Manage
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <ion-icon name="person-circle"></ion-icon>
                            @if (@ViewBag.Name != null)
                            {
                                @ViewBag.Name
                            }
                            else
                            {
                                <p>Account</p>
                            }
                        </a>
                    </li>
                    @if (@ViewBag.Name != null)
                    {
                        <li>
                            <a asp-controller="Home" asp-action="Logout">
                                Log out
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="left">
            <div class="categories">
                <div class="rightTitle">
                    Page
                </div>
                <button class="cate" id="directPageProduct" value="/Admin/ListProducts" onclick="changeDirectProduct()">
                    List Products
                </button>
                <button class="cate" id="directPageOrder" value="/Admin/ListOrders" onclick="changeDirectOrder()">
                    List Orders
                </button>
            </div>
        </div>
        <div class="right">
            <div class="cart">
                <form id="listPro" asp-controller="Admin" asp-action="ListOrders" method="get" style="height: 90%;">
                    @*<div class="cartContact">
                        <div style="margin: auto 0">
                            <h4 style="margin:auto;">List Order</h4>
                        </div>
                        <div class="optionSort" style="margin: auto 0;display:flex">
                            <div class="option" style="margin:auto">
                                From:
                                <input type="date" name="from" />
                            </div>
                            <div class="option" style="margin:auto">
                                To:
                                <input type="date" name="to" />
                            </div>
                            <div class="option" style="margin:auto;">
                                <button style="padding:5px" type="submit">Find</button>
                            </div>
                        </div>
                    </div>*@
                    <div style="height: 95%;">
                        <div class="listProduct">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Order ID</th>
                                        <th scope="col">Product ID</th>
                                        <th scope="col">Product Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">OdAmount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var o in Model)
                                    {
                                        <tr >
                                            <th scope="row">@o.OrderId</th>
                                            <td>@o.ProductId</td>
                                            <td>
                                                @foreach (var p in @ViewBag.Products)
                                                {
                                                    @if(@o.ProductId == @p.ProductId)
                                                    {
                                                        @p.ProductName
                                                    }
                                                }
                                            </td>
                                            <td>@o.Price</td>
                                            <td>@o.Quantity</td>
                                            <td>@o.OdAmount</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                       @* @if ((int)ViewData["TotalPage"] > 1)
                        {

                            <div style="height:5%;text-align:center">

                                @for (int i = 1; i <= (int)ViewData["TotalPage"]; i++)
                                {
                                    <button value="@i" type="submit" name="page">@i</button>
                                }

                            </div>
                        }*@
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        function orderDetail(){
            const URL="/Admin/OrderDetail/${orderID}";
            window.location=URL;
        }
            function changeCate()
        {
            //kick hoat submit cho form tren
            document.getElementById("listPro").submit();
        }
        function changeDirectProduct(){
            var x=document.getElementById("directPageProduct").value;
            console.log(x);
            window.location=x;
        }
        function changeDirectOrder(){
            var x=document.getElementById("directPageOrder").value;
            console.log(x);
            window.location=x;
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>
